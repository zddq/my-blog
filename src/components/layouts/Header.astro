---
import { GITHUB_URL } from "@/config";
---

<header class="header">
	<a class="title" href="/">
		<span id="flyMan" class="flyMan"></span>
		<span class="name">
			ZDDQ
			<span class="blog">Blog</span>
		</span>
	</a>
	<a class="github" href={GITHUB_URL} target="_blank">
		<svg viewBox="0 0 16 16" aria-hidden="true">
			<path
				fill="currentColor"
				d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
			></path>
		</svg>
	</a>
</header>
<script>
	import Lottie from "lottie-web";
	const flyManDom = document.getElementById("flyMan");
	if (flyManDom) {
		Lottie.loadAnimation({ container: flyManDom, path: "/lottie/fly-man.json", renderer: "svg", loop: true, autoplay: true });
	}
</script>
<style lang="less">
	.header {
		position: sticky;
		left: 0;
		top: 0;
		z-index: 80;

		display: flex;
		align-items: center;
		justify-content: space-between;

		height: 64px;
		padding: 0 24px 0 0;
		margin: 0;
		background: #fff;
		box-shadow: 0 4px 8px #0000001a;

		color: var(--black);
	}

	.title {
		display: flex;
		align-items: center;
		margin-top: 3px;

		color: var(--black);
		font-size: 1.5em;
		font-weight: 800;
		text-decoration: none;

		&:hover {
			.flyMan {
				transform: translate(4px);
			}
			.name {
				transform: translate(-12px);
			}
		}
	}

	.flyMan {
		width: 64px;
		height: 64px;
		transition: all linear 1s;
		margin-right: 16px;
		margin-top: -14px;

		animation: flyManIn 0.8s ease-in both;
	}

	.name {
		color: var(--black);
		transition: all linear 1s;
	}

	.blog {
		color: #25252540;
	}

	.github {
		width: 28px;
		height: 28px;
		color: var(--black);
	}

	@keyframes flyManIn {
		0% {
			transform: translateY(-100%);
			opacity: 0;
			transition:
				transform 1s ease-out,
				opacity 1s ease-out;
		}
		100% {
			transform: translateY(0);
			opacity: 1;
		}
	}
</style>
